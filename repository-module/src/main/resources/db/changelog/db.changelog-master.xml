<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="e.zlotnikova@gmail.com">
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="description" type="varchar(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="e.zlotnikova@gmail.com">
        <createTable tableName="item_details">
            <column name="item_id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="price" type="DECIMAL(20, 10)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="e.zlotnikova@gmail.com">
        <addForeignKeyConstraint baseColumnNames="item_id"
                                 baseTableName="item_details"
                                 constraintName="fk_item_details_to_item"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"
                                 referencedColumnNames="id"
                                 referencedTableName="item"
                                 validate="true"/>
    </changeSet>
    <changeSet id="4" author="e.zlotnikova@gmail.com">
        <createTable tableName="shop">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(40)"/>
            <column name="location" type="varchar(100)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="e.zlotnikova@gmail.com">
        <createTable tableName="item_shop">
            <column name="item_id" type="BIGINT">
                <constraints foreignKeyName="fk_item_id"
                             referencedTableName="item"
                             referencedColumnNames="id"/>
            </column>
            <column name="shop_id" type="BIGINT">
                <constraints foreignKeyName="fk_shop_id"
                             referencedTableName="shop"
                             referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="6" author="e.zlotnikova@gmail.com">
        <addPrimaryKey columnNames="item_id, shop_id"
                       constraintName="pk_item_shop"
                       tableName="item_shop"
                       validate="true"/>
    </changeSet>
</databaseChangeLog>